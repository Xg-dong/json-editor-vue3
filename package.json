{
    "name": "json-editor-vue3",
    "version": "1.0.0",
    "type": "module",
    "description": "基于 Element Plus、Vue 3、Monaco Editor 的 JSON 编辑器组件，提供强大的字段路径裁剪、合并、比较等功能",
    "keywords": [
        "json",
        "editor",
        "vue3",
        "element-plus",
        "monaco-editor",
        "typescript",
        "vue",
        "diff",
        "merge",
        "path",
        "wildcard",
        "json-editor"
    ],
    "homepage": "https://github.com/bx3mdyy/json-editor#readme",
    "bugs": {
        "url": "https://github.com/bx3mdyy/json-editor/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/bx3mdyy/json-editor.git"
    },
    "license": "MIT",
    "author": {
        "name": "bx3mdyy",
        "email": "your-email@example.com"
    },
    "main": "dist/index.cjs.js",
    "module": "dist/index.esm.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ],
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.esm.js",
            "require": "./dist/index.cjs.js"
        },
        "./utils": {
            "types": "./dist/utils/index.d.ts",
            "import": "./dist/utils/index.esm.js",
            "require": "./dist/utils/index.cjs.js"
        },
        "./JsonEditor": {
            "types": "./dist/JsonEditor.d.ts",
            "import": "./dist/JsonEditor.esm.js",
            "require": "./dist/JsonEditor.cjs.js"
        },
        "./JsonEditor.css": "./dist/style.css"
    },
    "scripts": {
        "build": "npm run clean && vite build",
        "clean": "rimraf dist",
        "dev": "vite build --watch",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:run": "vitest run",
        "test:coverage": "vitest run --coverage",
        "lint": "eslint src --ext .ts,.vue --fix",
        "lint:check": "eslint src --ext .ts,.vue",
        "format": "prettier --write \"src/**/*.{ts,vue,js,json}\"",
        "format:check": "prettier --check \"src/**/*.{ts,vue,js,json}\"",
        "type-check": "vue-tsc --noEmit",
        "prepublishOnly": "npm run test:run && npm run build",
        "release": "chmod +x scripts/release.sh && ./scripts/release.sh",
        "release:dry": "chmod +x scripts/release.sh && ./scripts/release.sh --dry-run",
        "release:beta": "npm run test:run && npm run build && npm publish --tag beta"
    },
    "dependencies": {
        "jsonc-parser": "^3.2.0",
        "lodash": "^4.17.21"
    },
    "peerDependencies": {
        "element-plus": "^2.0.0",
        "monaco-editor": "^0.44.0",
        "vue": "^3.0.0"
    },
    "peerDependenciesMeta": {
        "monaco-editor": {
            "optional": true
        },
        "element-plus": {
            "optional": true
        }
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^6.6.4",
        "@testing-library/vue": "^8.1.0",
        "@types/jsdom": "^21.1.7",
        "@types/lodash": "^4.14.202",
        "@types/node": "^20.19.9",
        "@types/vue": "^1.0.31",
        "@typescript-eslint/eslint-plugin": "^6.15.0",
        "@typescript-eslint/parser": "^6.15.0",
        "@vitejs/plugin-vue": "^5.2.1",
        "@vitest/ui": "^1.6.1",
        "@vue/test-utils": "^2.4.6",
        "@vue/tsconfig": "^0.5.1",
        "c8": "^8.0.1",
        "element-plus": "^2.4.4",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-vue": "^9.19.2",
        "happy-dom": "^18.0.1",
        "jsdom": "^26.1.0",
        "monaco-editor": "^0.44.0",
        "prettier": "^3.1.1",
        "rimraf": "^5.0.5",
        "typescript": "^5.3.3",
        "vite": "^5.4.19",
        "vite-plugin-dts": "^4.5.4",
        "vitest": "^1.1.0",
        "vue": "^3.5.18",
        "vue-tsc": "^1.8.25"
    },
    "engines": {
        "node": ">=16.0.0",
        "npm": ">=7.0.0"
    }
}
